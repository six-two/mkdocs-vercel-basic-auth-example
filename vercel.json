{
    "buildCommand": "bash -x ./vercel-build.sh",
    "installCommand": "echo 'Installation is handled by the build script'",
    "outputDirectory": "public",
    "routes": [
        {
          "src": "/.*",
          "dest": "/401.html",
          "status": 401,
          "headers": { "www-authenticate": "Basic realm=\"secure\"" },
          "missing": [
            {
              "type": "header",
              "key": "authorization",
              "value": "Basic YTph"
            }
          ]
        },
        {
            "src": "/(.*)",
            "dest": "/./$1"
        }
      ],   
    "github": {
        "silent": true
    }
}